<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include-->
    <!--layout="@layout/title_bar"-->
    <!--android:layout_weight="1"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_width="match_parent"/>-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:layout_weight="5"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请输入密码"
            android:textColor="@color/color_888"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/tv_pwd_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_1"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_2"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_3"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_4"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_5"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_6"
            app:layout_constraintRight_toLeftOf="@+id/tv_pwd_8"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pwd_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_tv_password_bg"
            android:gravity="center"
            android:textColor="@color/color_888"
            android:textSize="@dimen/password_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_pwd_7"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/btn_pwd_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_btn_password_back"
            android:padding="12dp"
            android:text="返 回"
            android:textColor="@color/colorWhite"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_pwd_confirm" />

        <Button
            android:id="@+id/btn_pwd_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/selector_btn_password_confirm"
            android:padding="12dp"
            android:text="确 定"
            android:textColor="@color/colorWhite"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/btn_pwd_back"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <include
        layout="@layout/keyboard_number"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />


</LinearLayout>