<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="语音播报"
                android:textColor="@color/color_737a82"
                android:textSize="32dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_play_voice_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="打开"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_play_voice_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="关闭"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="播放方式"
                android:textColor="@color/color_737a82"
                android:textSize="32dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_play_voice_live_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="播报住校/走读+姓名"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_play_voice_live_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="播报住校/走读生"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_play_voice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="播报姓名"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <LinearLayout
                android:id="@+id/ll_play_voice_example"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收听示例"
                    android:textColor="@color/color_737a82"
                    android:textSize="32dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="根据播报方式播放语音合成示例"
                    android:textColor="@color/color_737a82"
                    android:textSize="22dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:text="音量调节"
                    android:textColor="@color/color_737a82"
                    android:textSize="32dp" />

                <TextView
                    android:id="@+id/tv_play_voice_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="1"
                    android:textColor="@color/color_737a82"
                    android:textSize="38dp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <SeekBar
                android:id="@+id/seek_bar_volume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:maxHeight="24dp"
                android:progressDrawable="@drawable/setting_seek_bar_progress_bg"
                android:splitTrack="false"
                android:thumb="@drawable/setting_seek_bar_thumb" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>