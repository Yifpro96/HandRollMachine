<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="实时定位"
                android:textColor="@color/color_737a82"
                android:textSize="32dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="打开"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="关闭"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp"
                android:text="时间间隔"
                android:textColor="@color/color_737a82"
                android:textSize="32dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_one_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="1秒"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_five_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="5秒"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_fifteen_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="15秒(默认)"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_thirty_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="30秒"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_one_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="1分钟"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:background="@color/color_888" />

            <TextView
                android:id="@+id/tv_location_interval_five_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:drawableRight="@drawable/setting_checkbox_select"
                android:padding="12dp"
                android:text="5分钟"
                android:textColor="@color/color_737a82"
                android:textSize="28dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@color/color_888" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>