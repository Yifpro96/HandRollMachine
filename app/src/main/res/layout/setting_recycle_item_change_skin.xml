<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_skin_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/skin_dark_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="10:16"/>

    <TextView
        android:id="@+id/tv_skin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_skin_icon"
        android:layout_marginTop="12dp"
        android:paddingBottom="36dp"
        android:text="皮肤名字"
        android:textSize="24sp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/setting_checkbox_select"/>
</android.support.constraint.ConstraintLayout>